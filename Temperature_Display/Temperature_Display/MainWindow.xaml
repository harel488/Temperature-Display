<Window x:Class="Temperature_Display.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Temperature_Display"
        mc:Ignorable="d"
        Title="Temperature Display" Height="450" Width="800">
    <Grid>
        <Label Name="timer" Content="00:00:00" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="153" FontSize="36"/>
        <GroupBox Header="Temperature:" HorizontalAlignment="Left" Height="176" Margin="165,87,0,0" VerticalAlignment="Top" Width="444" FontSize="16">
            <Label Name="tempLabel" Content="00 c" HorizontalAlignment="Left" Margin="147,32,0,0" VerticalAlignment="Top" Width="185" Height="100" FontSize="48"/>
        </GroupBox>

    </Grid>
</Window>
